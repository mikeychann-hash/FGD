{
  "version": "1.0.0",
  "scanInterval": 10000,
  "cpuThreshold": 0.85,
  "memThreshold": 0.85,
  "diskThreshold": 0.90,
  "networkThreshold": 0.80,
  "thresholds": {
    "critical": 0.95,
    "high": 0.85,
    "medium": 0.70,
    "low": 0.50
  },
  "cooldowns": {
    "policy_adjustment": 30000,
    "node_rebalance": 60000,
    "emergency_action": 5000
  },
  "governanceActions": [
    {
      "type": "adjust_policy",
      "description": "Optimize AI resource usage",
      "priority": "high",
      "cooldown": 30000,
      "maxRetries": 3
    },
    {
      "type": "rebalance_node",
      "description": "Shift load between nodes",
      "priority": "medium",
      "cooldown": 60000,
      "maxRetries": 2
    },
    {
      "type": "scale_down",
      "description": "Reduce resource allocation",
      "priority": "medium",
      "cooldown": 45000,
      "maxRetries": 3
    },
    {
      "type": "emergency_shutdown",
      "description": "Emergency resource protection",
      "priority": "critical",
      "cooldown": 5000,
      "maxRetries": 1
    }
  ],
  "policies": {
    "learningRate": {
      "default": 1.0,
      "min": 0.1,
      "max": 2.0,
      "step": 0.1
    },
    "delegationBias": {
      "default": 0.4,
      "min": 0.1,
      "max": 0.9,
      "step": 0.05
    },
    "cooldown": {
      "default": 10000,
      "min": 5000,
      "max": 60000,
      "step": 5000
    }
  },
  "alerts": {
    "enabled": true,
    "channels": ["console", "log"],
    "levels": ["critical", "high", "medium"]
  }
}