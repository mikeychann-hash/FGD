# Server Configuration
PORT=3000
NODE_ENV=development

# LLM Provider Configuration
# Choose which LLM provider to use: 'openai' or 'grok'
LLM_PROVIDER=openai

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Grok (xAI) API Configuration
# Get your API key from: https://console.x.ai
GROK_API_KEY=
GROK_API_URL=https://api.x.ai/v1/chat/completions

# Authentication Configuration
# Generate secure random strings for production use
JWT_SECRET=
JWT_EXPIRES_IN=24h

# API Keys for different user roles
# Default API key for local development: folks123
# These should be changed in production
ADMIN_API_KEY=folks123
LLM_API_KEY=llm-key-change-me

# Minecraft RCON Configuration (Optional)
# Configure these if you want to connect to a Minecraft server
MINECRAFT_RCON_HOST=127.0.0.1
MINECRAFT_RCON_PORT=25575
MINECRAFT_RCON_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Model Control Ratio for LLM
# LLM_CONTROL_RATIO=0.5
